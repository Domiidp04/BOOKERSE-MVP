---
import { supabase } from '../lib/supabase';

// ID del negocio (ahora lo dejamos fijo, luego dinámico)
const businessId = 'TU-UUID-DE-BUSINESS';

const { data: services } = await supabase
  .from('services')
  .select('*')
  .eq('business_id', businessId);
---

<h2>Servicios disponibles</h2>

<ul>
  {services?.map(s => (
    <li>
      <strong>{s.name}</strong> — {s.duration_minutes} min — {s.price}€
    </li>
  ))}
</ul>
